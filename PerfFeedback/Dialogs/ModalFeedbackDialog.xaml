<Window x:Class="PerfFeedback.Dialogs.ModalFeedbackDialog"        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"        xmlns:vm="clr-namespace:PerfFeedback.Client;assembly=PerfFeedback.Client"        Title="Add/Edit Feedback for this CoWorker"        Height="529"        Width="Auto"         HorizontalAlignment="Stretch"        VerticalAlignment="Stretch"        Loaded="Window_Loaded"        WindowStartupLocation="CenterScreen">    <Window.Resources>        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />    </Window.Resources>
    <Grid Height="495" Width="Auto"          HorizontalAlignment="Stretch" VerticalAlignment="Stretch">        <Grid.RowDefinitions>            <RowDefinition Height="60" />            <RowDefinition />            <RowDefinition Height="53" />        </Grid.RowDefinitions>
        <Grid Grid.Row="0"              HorizontalAlignment="Left" VerticalAlignment="Top"              Height="31" Width="474"               Margin="10,10,0,0"                Visibility="{Binding IsAdd, Converter={StaticResource BooleanToVisibilityConverter}}">            <Grid.ColumnDefinitions>                <ColumnDefinition Width="92" />                <ColumnDefinition/>            </Grid.ColumnDefinitions>            <Grid.RowDefinitions>                <RowDefinition/>            </Grid.RowDefinitions>
            <Label Grid.Row="0"                   Content="Name:"                   HorizontalAlignment="Left" VerticalAlignment="Top"                   Height="26" Width="44"/>            <TextBox Grid.Column="1"                     IsEnabled="{Binding IsAdd}"                     TextWrapping="Wrap" Text="{Binding Name}"                     HorizontalAlignment="Left" VerticalAlignment="Top"                     Width="352" Height="22"/>        </Grid>
        <Grid Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">            <Grid.ColumnDefinitions>                <ColumnDefinition Width="12*" />
                <ColumnDefinition Width="367*"/>                <ColumnDefinition Width="379*" />            </Grid.ColumnDefinitions>            <Grid.RowDefinitions>                <RowDefinition Height="30"/>                <RowDefinition Height="30"/>                <RowDefinition Height="*"/>            </Grid.RowDefinitions>            <Label Grid.Row="0"                   Grid.ColumnSpan="2"                   Content="Work Item ID:"                    HorizontalAlignment="Left" VerticalAlignment="Top"                    Height="29" Width="83" />            <TextBox Grid.Row="0"                      Grid.Column="1"                      Grid.ColumnSpan="2"                     IsEnabled="{Binding IsAdd}"                     TextWrapping="Wrap"                      Text="{Binding CurrentWorkItem.Title}"                      HorizontalAlignment="Left" VerticalAlignment="Top"                      Width="352" Height="22" Margin="107,3,0,0"/>            <Label Grid.Row="1"                   Content="Strengths:"                   HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.ColumnSpan="2"/>
            <Label Grid.Row="1"                   Grid.Column="2"                   Content="Areas for Improvement:"
                   HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

            <TextBox Grid.Row="2"                     Text="{Binding CurrentWorkItem.Strength.Comment}"                      HorizontalAlignment="Stretch" VerticalAlignment="Stretch"                     Margin="10" Grid.ColumnSpan="2"/>
            <TextBox Grid.Row="2"                     Grid.Column="2"                     Text="{Binding CurrentWorkItem.AreaForImprovement.Comment}"                      HorizontalAlignment="Stretch" VerticalAlignment="Stretch"                     Margin="10"/>        </Grid>
        <Grid Grid.Row="2"
              HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Button Grid.Row="2"                    Content="Save and Close"                     IsDefault="True"                     Command="{Binding SaveCommand}"                     HorizontalAlignment="Right" VerticalAlignment="Bottom"                     Margin="0,0,116,10" Padding="3"                     Height="31" Width="90"/>
            <Button Grid.Row="2"                    Content="Cancel"                     IsCancel="True"                     HorizontalAlignment="Right" VerticalAlignment="Bottom"                     Margin="0,0,10,10" Padding="3"                     Height="31" Width="82"/>            <Button Grid.Row="2"                    Content="Save and Add Another"                     Command="{Binding SaveCommand}"                    Margin="0,0,228,10" Padding="3"                    HorizontalAlignment="Right" VerticalAlignment="Bottom"                     Height="31" Width="129"/>        </Grid>
    </Grid></Window>
