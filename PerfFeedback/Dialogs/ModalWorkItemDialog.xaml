<Window x:Class="PerfFeedback.Dialogs.ModalWorkItemDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add/Edit Feedback for this WorkItem"        Height="454" Width="Auto"         HorizontalAlignment="Stretch"        VerticalAlignment="Stretch"        Loaded="Window_Loaded"        WindowStartupLocation="CenterScreen">
    <Grid Height="400" Width="Auto"          HorizontalAlignment="Stretch" VerticalAlignment="Stretch">        <Grid.RowDefinitions>            <RowDefinition />            <RowDefinition Height="53" />        </Grid.RowDefinitions>
        <Grid Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">            <Grid.ColumnDefinitions>                <ColumnDefinition Width="*" />                <ColumnDefinition Width="*" />            </Grid.ColumnDefinitions>            <Grid.RowDefinitions>                <RowDefinition Height="30"/>                <RowDefinition Height="30"/>                <RowDefinition Height="*"/>            </Grid.RowDefinitions>            <Label Grid.Row="0"                   Content="Work Item ID:"                    HorizontalAlignment="Left" VerticalAlignment="Top"                    Height="29" Width="83" Margin="10,-4,0,0" />            <TextBox Grid.Row="0"                      Grid.ColumnSpan="2"                     IsEnabled="{Binding IsAdd}"                     TextWrapping="Wrap"                      Text="{Binding Title}"                      HorizontalAlignment="Left" VerticalAlignment="Top"                      Width="352" Height="22" Margin="114,-2,0,0"/>            <Label Grid.Row="1"                   Content="Strengths:"                   HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            <Label Grid.Row="1"                   Grid.Column="1"                   Content="Areas for Improvement:"
                   HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

            <TextBox Grid.Row="2"                     Text="{Binding Strength.Comment}"                      HorizontalAlignment="Stretch" VerticalAlignment="Stretch"                     Margin="10"/>
            <TextBox Grid.Row="2"                     Grid.Column="1"                     Text="{Binding AreaForImprovement.Comment}"                      HorizontalAlignment="Stretch" VerticalAlignment="Stretch"                     Margin="10"/>        </Grid>
        <Grid Grid.Row="2"
              HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Button Grid.Row="2"                    Content="Save and Close"                     IsDefault="True"                     Command="{Binding SaveCommand}"                     HorizontalAlignment="Right" VerticalAlignment="Bottom"                     Margin="0,0,116,10" Padding="3"                     Height="31" Width="90"/>
            <Button Grid.Row="2"                    Content="Cancel"                     IsCancel="True"                     HorizontalAlignment="Right" VerticalAlignment="Bottom"                     Margin="0,0,10,10" Padding="3"                     Height="31" Width="82"/>            <Button Grid.Row="2"                    Content="Save and Add Another"                     Command="{Binding SaveCommand}"                    Margin="0,0,228,10" Padding="3"                    HorizontalAlignment="Right" VerticalAlignment="Bottom"                     Height="31" Width="129"/>        </Grid>
    </Grid>
</Window>
